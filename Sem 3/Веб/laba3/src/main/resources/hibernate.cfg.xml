<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Настройки JDBC -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/laba3_web</property>
        <property name="hibernate.connection.username">hulumulu</property>
        <property name="hibernate.connection.password">Qwerty123</property>

        <!-- Настройки диалекта -->
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Настройки показа SQL -->
        <property name="show_sql">true</property>

        <!-- Другие настройки -->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- Аннотированные классы -->
        <mapping class="com.example.laba3.model.PointResult"/>


    </session-factory>
</hibernate-configuration>